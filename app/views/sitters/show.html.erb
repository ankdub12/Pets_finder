<h3 id='prop_head'>ACTIVE JOBS </h3>
<table>
<thead>
<tr>
<th>ID</th>
<th>Owner Rating</th>
<th>Start Date</th>
<th>End Date</th>
</tr>
<thead>
<tbody>
<% @jobs.each do |p| %>
	<tr>
	<td><%= p.id %></td>
	<td><%= p.owner_rating %></td>
	<td><%= p.start_date %></td>
	<td><%= p.end_date %></td>
