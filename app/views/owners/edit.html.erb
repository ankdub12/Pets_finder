<div id='edit_background'>
<% if flash[:errors] %>
   <h3 style="color: red;"><%= flash[:errors] %></h3>
<% end %>
<h1 id='newfont'>Edit your profile below</h1>
<form id='own_edit_form' action="/owners/<%= session[:id]%>/edit" method='post'>
<input type='hidden' name ='authenticity_token' value="<%=form_authenticity_token%>">
<input type="hidden" name="_method" value="patch">
<div class='edit_form_input'><label>First Name:</label><input type='text' name='owner[first_name]' value="<%=@owner.first_name%>"></div>
<div class='edit_form_input'<label>Last Name:</label><input type='text' name='owner[last_name]' value="<%=@owner.last_name%>"></div>
<div class='edit_form_input'<label>Email:</label><input type='text' name='owner[email]' value="<%=@owner.email%>"></div>
<div class='edit_form_input'<label>Password:</label><input type='password' name='owner[password]' value="<%=@owner.password_digest%>"></div>
<div class='edit_form_input'<label>Password confirmation:</label><input type='password' name='owner[password_confirmation]' value="<%=@owner.password_digest%>"></div>
<div class='edit_form_input'<label>Zip code:</label><input type='text' name='owner[zip]' value="<%=@owner.zip%>"></div>
<div class='edit_form_input'<label>Phone:</label><input type='text' name='owner[phone]' value="<%=@owner.phone%>"></div>
<div class='edit_form_input'<label>Address:</label><input type='text' name='owner[address]' value="<%=@owner.address%>" ></div>
<div class='edit_form_input'<label>City</label><input type='text' name='owner[city]' value="<%=@owner.city%>"></div>
<input id='up_but' type="submit" value='UPDATE'>
</form>
</div>