<% if flash[:errors] %>
    <h3 style="color: red;"><%= flash[:errors] %></h3>
<% end %>
<h1>Edit your profile below</h1>
<form action="/owners/<%=@owner.id%>" method='post'>
<input type='hidden' name ='authenticity_token' value="<%=form_authenticity_token%>">
<input type="hidden" name="_method" value="patch">
<div><label>First Name:</label><input type='text' name='owner[first_name]' value="<%=@owner.first_name%>"></div>
<div><label>Last Name:</label><input type='text' name='owner[last_name]' value="<%=@owner.last_name%>"></div>
<div><label>Email:</label><input type='text' name='owner[email]' value="<%=@owner.email%>"></div>
<div><label>Password:</label><input type='password' name='owner[password]' value="<%=@owner.password_digest%>"></div>
<div><label>Password confirmation:</label><input type='password' name='owner[password_confirmation]' value="<%=@owner.password_digest%>"></div>
<div><label>Zip code:</label><input type='text' name='owner[zip]' value="<%=@owner.zip%>"></div>
<div><label>Phone:</label><input type='text' name='owner[phone]' value="<%=@owner.phone%>"></div>
<div><label>Address:</label><input type='text' name='owner[address]' value="<%=@owner.address%>" ></div>
<div><label>City</label><input type='text' name='owner[city]' value="<%=@owner.city%>"></div>
<input type="submit" value='UPDATE'>
</form>
