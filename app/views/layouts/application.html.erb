<!DOCTYPE html>
<html>
<head>
  <title>PetFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'style' %>

  <link href="stylesheets/bootstrap.css" rel="stylesheet" type="text/css">
<link href="stylesheets/style.css" rel="stylesheet" type="text/css">
<link href="stylesheets/font-awesome.css" rel="stylesheet" type="text/css">
<link href="stylesheets/responsive.css" rel="stylesheet" type="text/css">
<link href="stylesheets/animate.css" rel="stylesheet" type="text/css">
<link href='http://fonts.googleapis.com/css?family=Oleo+Script' rel='stylesheet' type='text/css'>


<script type="text/javascript" src="javascripts/jquery.1.8.3.min.js"></script>
<script type="text/javascript" src="javascripts/bootstrap.js"></script>
<script type="text/javascript" src="javascripts/jquery-scrolltofixed.js"></script>
<script type="text/javascript" src="javascripts/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="javascripts/jquery.isotope.js"></script>
<script type="text/javascript" src="javascripts/wow.js"></script>
<script type="text/javascript" src="javascripts/classie.js"></script>

</head>
<body>
  <% if current_owner %>

<ul class="topnav" id="myTopnav">
  <li><a href="/owners/<%= current_owner.id %>/show">Your Dashboard</a></li>
  <li><a href="#news">Show Pets</a></li>
  <li><a href="/owners/<%= current_owner.id %>/edit">Edit User Profile</a></li>
  <li><a href="#about">Old Jobs</a></li>
  <li><a href="#about">Log Out</a></li>
  <li class="icon">
    <a href="javascript:void(0);" onclick="myFunction()">&#9776;</a>
  </li>
</ul>

  <form action="/owners" method='post'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Log Out'>

  </form>
  <a href="/owners/<%= session[:id] %>/show">Dashboard</a><br>
  <a href="/owners/<%= session[:id] %>/edit">Edit Profile</a><br>
  <a href="/pets/new">Add Pet</a><br>
  <a href="/pets">My Pets</a><br>
  <a href="dead link">Old Jobs</a>

  <% end %>
  <% if current_sitter %>
  <form action="/sitters" method='post'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Log Out'>
  </form>
  <a href="/sitters/<%= session[:id] %>/show">Dashboard</a>
  <a href="/sitters/<%= session[:id] %>/edit">Edit Profile</a>
  <a href="dead link">Old Jobs</a>
  <% end %>
<%= yield %>

</body>
</html>
