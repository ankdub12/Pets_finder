<!DOCTYPE html>
<html>
<head>
  <title>PetFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>
  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <h6 style="color: red;"><%= e %></h6>
    <% end %>
  <% end %>
<%= yield %>

</body>
</html>
